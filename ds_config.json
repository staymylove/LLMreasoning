{
    "train_batch_size": "auto",
    "gradient_accumulation_steps": "auto",
    "fp16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 2,
      "cpu_offload": true
    },
    "scheduler": {
      "type": "WarmupCosineLR",
      "params": {
        "warmup_min_ratio": 0.0,
        "warmup_num_steps": "auto",
        "cos_min_ratio": 0.0001,
        "total_num_steps": "auto"
      }
    },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": "auto",
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    },
    "zero_force_ds_cpu_optimizer": true
  }